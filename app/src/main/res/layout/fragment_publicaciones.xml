<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.PublicacionesFragment"
    android:layout_marginBottom="10dp">

    <Spinner
        style="@style/Widget.MaterialComponents.PopupMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerPublicaciones"
        android:layout_margin="10dp"/>

    <ProgressBar
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressPubli" />

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/cardview_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:id="@+id/cardPublicacion"
        android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp">

                <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/cancha"
                    android:src="@drawable/c2" />

                <TextView
                    android:id="@+id/mensajeCarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="@string/cargando"/>


            </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPublicaciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>